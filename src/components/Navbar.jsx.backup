import { Link, NavLink, useNavigate } from 'react-router-dom';
import { useState, useEffect } from 'react';
import { useAuth } from '../context/AuthContext';
import NotificationController from '../controllers/NotificationController';
import '../styles/Navbar.css';

const Navbar = () => {
  const navigate = useNavigate();
  const { isLoggedIn, user, profile, role, logout } = useAuth();
  const [unreadCount, setUnreadCount] = useState(0);

  // Fetch unread count when user is logged in
  useEffect(() => {
    // Don't fetch notifications for admin users
    if (isLoggedIn && role !== 'admin') {
      fetchUnreadCount();
      // Poll every 30 seconds for new notifications
      const interval = setInterval(fetchUnreadCount, 30000);
      return () => clearInterval(interval);
    }
  }, [isLoggedIn, role]);

  const fetchUnreadCount = async () => {
    try {
      const count = await NotificationController.getUnreadCount();
      setUnreadCount(count);
    } catch (error) {
      // Silently fail - don't log to avoid console spam
      // Backend might be down, just keep count at 0
      setUnreadCount(0);
    }
  };

  // Handle logout
  const handleLogout = () => {
    console.log('ðŸšª Logging out from Navbar');
    logout();
    navigate('/');
  };

  // Get display name - prefer profile data if available
  const displayName = profile?.name || user?.name || 'Profile';
  const displayEmail = profile?.email || user?.email;

  return (
    <nav className="navbar">
      <div className="navbar-container">
        <Link to="/" className="navbar-logo">
          <svg className="logo-icon" viewBox="0 0 24 24" fill="currentColor">
            <path d="M20.9,6.6l-3-3C17.5,3.2,17,3,16.5,3h-9C7,3,6.5,3.2,6.1,3.6l-3,3C2.4,7.2,2,8,2,8.5V19c0,1.1,0.9,2,2,2h16c1.1,0,2-0.9,2-2V8.5C22,8,21.6,7.2,20.9,6.6z M12,17.5L7,13h3v-3h4v3h3L12,17.5z"/>
          </svg>
          Craftopia
        </Link>

        <ul className="navbar-menu">
          {isLoggedIn && role !== 'admin' && (
            <li className="navbar-item">
              <NavLink to="/" className="navbar-link">Home</NavLink>
            </li>
          )}
          
          {isLoggedIn && role === 'admin' ? (
            // Admin Menu (logged in)
            <>
              <li className="navbar-item">
                <NavLink to="/admin-dashboard" className="navbar-link navbar-link-primary">
                  <svg className="nav-icon" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M19.14,12.94c0.04-0.3,0.06-0.61,0.06-0.94c0-0.32-0.02-0.64-0.07-0.94l2.03-1.58c0.18-0.14,0.23-0.41,0.12-0.61 l-1.92-3.32c-0.12-0.22-0.37-0.29-0.59-0.22l-2.39,0.96c-0.5-0.38-1.03-0.7-1.62-0.94L14.4,2.81c-0.04-0.24-0.24-0.41-0.48-0.41 h-3.84c-0.24,0-0.43,0.17-0.47,0.41L9.25,5.35C8.66,5.59,8.12,5.92,7.63,6.29L5.24,5.33c-0.22-0.08-0.47,0-0.59,0.22L2.74,8.87 C2.62,9.08,2.66,9.34,2.86,9.48l2.03,1.58C4.84,11.36,4.8,11.69,4.8,12s0.02,0.64,0.07,0.94l-2.03,1.58 c-0.18,0.14-0.23,0.41-0.12,0.61l1.92,3.32c0.12,0.22,0.37,0.29,0.59,0.22l2.39-0.96c0.5,0.38,1.03,0.7,1.62,0.94l0.36,2.54 c0.05,0.24,0.24,0.41,0.48,0.41h3.84c0.24,0,0.44-0.17,0.47-0.41l0.36-2.54c0.59-0.24,1.13-0.56,1.62-0.94l2.39,0.96 c0.22,0.08,0.47,0,0.59-0.22l1.92-3.32c0.12-0.22,0.07-0.47-0.12-0.61L19.14,12.94z M12,15.6c-1.98,0-3.6-1.62-3.6-3.6 s1.62-3.6,3.6-3.6s3.6,1.62,3.6,3.6S13.98,15.6,12,15.6z"/>
                  </svg>
                  Admin Dashboard
                </NavLink>
              </li>
              <li className="navbar-item">
                <button onClick={handleLogout} className="navbar-link navbar-btn">
                  <svg className="nav-icon" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M17 7l-1.41 1.41L18.17 11H8v2h10.17l-2.58 2.58L17 17l5-5zM4 5h8V3H4c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h8v-2H4V5z"/>
                  </svg>
                  Logout
                </button>
              </li>
            </>
          ) : isLoggedIn && role === 'artisan' ? (
            // Artisan Menu (logged in)
            <>
              <li className="navbar-item">
                <NavLink to="/craftsman-dashboard" className="navbar-link navbar-link-primary">
                  <svg className="nav-icon" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8V11h-8v10zm0-18v6h8V3h-8z"/>
                  </svg>
                  Dashboard
                </NavLink>
              </li>
              <li className="navbar-item">
                <NavLink to="/jobs" className="navbar-link">
                  <svg className="nav-icon" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M20 6h-4V4c0-1.11-.89-2-2-2h-4c-1.11 0-2 .89-2 2v2H4c-1.11 0-1.99.89-1.99 2L2 19c0 1.11.89 2 2 2h16c1.11 0 2-.89 2-2V8c0-1.11-.89-2-2-2zm-6 0h-4V4h4v2z"/>
                  </svg>
                  Jobs
                </NavLink>
              </li>
              <li className="navbar-item">
                <NavLink to="/notifications" className="navbar-link notification-link">
                  <svg className="nav-icon" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 22c1.1 0 2-.9 2-2h-4c0 1.1.89 2 2 2zm6-6v-5c0-3.07-1.64-5.64-4.5-6.32V4c0-.83-.67-1.5-1.5-1.5s-1.5.67-1.5 1.5v.68C7.63 5.36 6 7.92 6 11v5l-2 2v1h16v-1l-2-2z"/>
                  </svg>
                  Notifications
                  {unreadCount > 0 && (
                    <span className="notification-badge">{unreadCount}</span>
                  )}
                </NavLink>
              </li>
              <li className="navbar-item">
                <NavLink to="/artisan-profile" className="navbar-link" title={displayEmail}>
                  <svg className="nav-icon" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                  </svg>
                  {displayName}
                </NavLink>
              </li>
              <li className="navbar-item">
                <button onClick={handleLogout} className="navbar-link navbar-btn">
                  <span className="nav-icon">âŽ‹</span> Logout
                </button>
              </li>
            </>
          ) : isLoggedIn && role === 'customer' ? (
            // Customer Menu (logged in)
            <>
              <li className="navbar-item">
                <NavLink to="/crafts" className="navbar-link">Browse Crafts</NavLink>
              </li>
              <li className="navbar-item">
                <NavLink to="/reservations" className="navbar-link navbar-link-primary">
                  My Reservations
                </NavLink>
              </li>
              <li className="navbar-item">
                <NavLink to="/notifications" className="navbar-link notification-link">
                  <svg className="nav-icon" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 22c1.1 0 2-.9 2-2h-4c0 1.1.89 2 2 2zm6-6v-5c0-3.07-1.64-5.64-4.5-6.32V4c0-.83-.67-1.5-1.5-1.5s-1.5.67-1.5 1.5v.68C7.63 5.36 6 7.92 6 11v5l-2 2v1h16v-1l-2-2z"/>
                  </svg>
                  Notifications
                  {unreadCount > 0 && (
                    <span className="notification-badge">{unreadCount}</span>
                  )}
                </NavLink>
              </li>
              <li className="navbar-item">
                <NavLink to="/artisan-profile" className="navbar-link" title={displayEmail}>
                  <svg className="nav-icon" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                  </svg>
                  {displayName}
                </NavLink>
              </li>
              <li className="navbar-item">
                <button onClick={handleLogout} className="navbar-link navbar-btn">
                  <svg className="nav-icon" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M17 7l-1.41 1.41L18.17 11H8v2h10.17l-2.58 2.58L17 17l5-5zM4 5h8V3H4c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h8v-2H4V5z"/>
                  </svg>
                  Logout
                </button>
              </li>
            </>
          ) : (
            // Guest Menu (not logged in)
            <>
              <li className="navbar-item">
                <NavLink to="/crafts" className="navbar-link">Browse Crafts</NavLink>
              </li>
              <li className="navbar-item">
                <NavLink to="/login" className="navbar-link navbar-link-secondary">
                  Sign In
                </NavLink>
              </li>
              <li className="navbar-item">
                <NavLink to="/role-selection" className="navbar-link navbar-link-primary">
                  Sign Up
                </NavLink>
              </li>
            </>
          )}
        </ul>

        <div className="navbar-mobile-toggle">
          <span></span>
          <span></span>
          <span></span>
        </div>
      </div>
    </nav>
  );
};

export default Navbar;
